{
  "manifest_version": 2,
  "name": "MisInfo Guard",
  "version": "1.0.0", 
  "description": "Select text and right-click to check for potential misinformation using MisInfo Guard's AI and Hashing.",
  "icons": {
    "48": "icons/shield-48.png",
     "96": "icons/shield-96.png" 
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": { 
    "default_icon": {
        "48": "icons/shield-48.png"
     },
    "default_title": "MisInfo Guard (Select text & right-click)"
    
  },
  "permissions": [
    "contextMenus", 
    "activeTab",    
    "notifications",
    "https://misinformation-detector-ai.vercel.app/*" 
  ],
  
  "web_accessible_resources": [
    "icons/shield-48.png",
    "icons/shield-96.png", 
    "icons/check.png",
    "icons/cross.png",
    "icons/warning.png",
    "icons/info.png",
    "icons/shield 48-title.png", 
    "result_panel.html",
    "result_panel.css"
  ]
}

